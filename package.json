{
  "name": "benchmark-web-server",
  "version": "2.0.0",
  "description": "Web-based benchmark runner for bilibili-player",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch server/index.ts",
    "start": "tsx server/index.ts",
    "build": "tsc",
    "worker": "tsx server/worker-client.ts",
    "deploy": "node deploy",
    "deploy:debug": "node deploy",
    "deploy:both": "node scripts/deploy-both.js",
    "deploy:standalone": "node deploy",
    "deploy:master": "node scripts/deploy-master.js",
    "deploy:worker": "node scripts/deploy-worker.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop benchmark-web",
    "pm2:restart": "pm2 restart benchmark-web",
    "pm2:logs": "pm2 logs benchmark-web",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t benchmark-web .",
    "docker:run": "docker run -d --name benchmark-web -p 3000:3000 -v $(pwd)/benchmark_report:/app/benchmark_report benchmark-web",
    "docker:stop": "docker stop benchmark-web",
    "docker:remove": "docker rm benchmark-web",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.16.0",
    "lz-string": "^1.5.0",
    "@bilibili-player/benchmark": "latest"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lz-string": "^1.5.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
