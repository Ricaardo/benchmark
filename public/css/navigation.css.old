/**
 * Benchmark Web Runner - 导航组件增强版
 * Enhanced Navigation Components
 * Version: 1.0.0
 * Date: 2025-11-28
 *
 * 包含:
 * 1. 全局顶部导航栏
 * 2. 侧边栏导航
 * 3. 面包屑导航
 * 4. 标签页导航
 * 5. 移动端菜单
 */

/* ========================================
   全局顶部导航栏 (Global Navbar)
   ======================================== */

.navbar {
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-4) var(--spacing-6);
    background: var(--color-white);
    box-shadow: var(--shadow-sm);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-5);
    transition: all var(--transition-base);
}

.navbar-scrolled {
    box-shadow: var(--shadow-md);
    padding: var(--spacing-3) var(--spacing-6);
}

/* 导航栏品牌区 */
.navbar-brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    text-decoration: none;
    transition: all var(--transition-fast);
}

.navbar-brand:hover {
    transform: scale(1.02);
}

.navbar-logo {
    font-size: var(--text-2xl);
    line-height: 1;
}

.navbar-title {
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-gray-800);
    margin: 0;
}

.navbar-subtitle {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    margin-top: 2px;
}

/* 导航菜单 */
.navbar-menu {
    display: flex;
    gap: var(--spacing-1);
    align-items: center;
}

.navbar-item {
    position: relative;
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-base);
    color: var(--color-gray-600);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    transition: all var(--transition-fast);
    white-space: nowrap;
}

.navbar-item:hover {
    background: var(--color-primary-50);
    color: var(--color-primary-600);
}

.navbar-item.active {
    background: var(--color-primary-500);
    color: var(--color-white);
}

.navbar-item.active::before {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    border-radius: var(--radius-full);
    background: var(--color-primary-500);
}

/* 导航徽章 */
.navbar-item-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 18px;
    height: 18px;
    padding: 0 var(--spacing-1);
    background: var(--color-danger-500);
    color: var(--color-white);
    font-size: 0.625rem;
    font-weight: var(--font-bold);
    border-radius: var(--radius-full);
    line-height: 1;
}

.navbar-item.active .navbar-item-badge {
    background: var(--color-white);
    color: var(--color-primary-500);
}

/* 导航操作区 */
.navbar-actions {
    display: flex;
    gap: var(--spacing-2);
    align-items: center;
}

/* 用户菜单 */
.navbar-user {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2);
    border-radius: var(--radius-base);
    cursor: pointer;
    transition: all var(--transition-fast);
}

.navbar-user:hover {
    background: var(--color-gray-50);
}

.navbar-user-avatar {
    width: 32px;
    height: 32px;
    border-radius: var(--radius-full);
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
}

.navbar-user-info {
    display: flex;
    flex-direction: column;
}

.navbar-user-name {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-gray-800);
    line-height: 1.2;
}

.navbar-user-role {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    line-height: 1.2;
}

/* 移动端菜单切换按钮 */
.navbar-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    padding: var(--spacing-2);
    background: transparent;
    border: none;
    cursor: pointer;
}

.navbar-toggle-bar {
    width: 24px;
    height: 2px;
    background: var(--color-gray-600);
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
}

.navbar-toggle.active .navbar-toggle-bar:nth-child(1) {
    transform: rotate(45deg) translateY(6px);
}

.navbar-toggle.active .navbar-toggle-bar:nth-child(2) {
    opacity: 0;
}

.navbar-toggle.active .navbar-toggle-bar:nth-child(3) {
    transform: rotate(-45deg) translateY(-6px);
}

/* ========================================
   侧边栏导航 (Sidebar)
   ======================================== */

.sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background: var(--color-white);
    box-shadow: var(--shadow-lg);
    overflow-y: auto;
    transition: transform var(--transition-base);
    z-index: calc(var(--z-sticky) + 1);
}

.sidebar-collapsed {
    width: var(--sidebar-collapsed-width);
}

.sidebar-header {
    padding: var(--spacing-5);
    border-bottom: 1px solid var(--color-gray-200);
}

.sidebar-brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    text-decoration: none;
}

.sidebar-logo {
    font-size: var(--text-3xl);
}

.sidebar-title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-gray-800);
}

.sidebar-menu {
    padding: var(--spacing-4);
}

.sidebar-section {
    margin-bottom: var(--spacing-6);
}

.sidebar-section-title {
    padding: var(--spacing-2) var(--spacing-3);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
}

.sidebar-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-3) var(--spacing-4);
    margin-bottom: var(--spacing-1);
    border-radius: var(--radius-base);
    color: var(--color-gray-700);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    transition: all var(--transition-fast);
}

.sidebar-item:hover {
    background: var(--color-primary-50);
    color: var(--color-primary-600);
}

.sidebar-item.active {
    background: var(--color-primary-500);
    color: var(--color-white);
}

.sidebar-item-icon {
    font-size: var(--text-lg);
    flex-shrink: 0;
}

.sidebar-item-label {
    flex: 1;
}

.sidebar-item-badge {
    padding: 2px var(--spacing-2);
    background: var(--color-danger-500);
    color: var(--color-white);
    font-size: 0.625rem;
    border-radius: var(--radius-full);
}

.sidebar-item.active .sidebar-item-badge {
    background: var(--color-white);
    color: var(--color-primary-500);
}

/* 折叠按钮 */
.sidebar-toggle-btn {
    position: absolute;
    top: var(--spacing-5);
    right: -12px;
    width: 24px;
    height: 24px;
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-fast);
}

.sidebar-toggle-btn:hover {
    background: var(--color-primary-50);
    border-color: var(--color-primary-500);
    color: var(--color-primary-600);
}

/* ========================================
   面包屑导航 (Breadcrumb)
   ======================================== */

.breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-4);
    background: var(--color-white);
    border-radius: var(--radius-base);
    margin-bottom: var(--spacing-4);
    font-size: var(--text-sm);
    box-shadow: var(--shadow-sm);
}

.breadcrumb-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--color-gray-600);
    text-decoration: none;
    transition: all var(--transition-fast);
}

.breadcrumb-item:hover:not(.active) {
    color: var(--color-primary-500);
}

.breadcrumb-item.active {
    color: var(--color-gray-800);
    font-weight: var(--font-medium);
}

.breadcrumb-separator {
    color: var(--color-gray-400);
    font-size: var(--text-xs);
}

.breadcrumb-icon {
    font-size: var(--text-base);
}

/* ========================================
   标签页导航 (Tabs)
   ======================================== */

.tabs {
    display: flex;
    flex-direction: column;
}

.tabs-nav {
    display: flex;
    gap: var(--spacing-1);
    border-bottom: 2px solid var(--color-gray-200);
    margin-bottom: var(--spacing-6);
}

.tabs-nav-item {
    position: relative;
    padding: var(--spacing-3) var(--spacing-5);
    color: var(--color-gray-600);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    border-bottom: 2px solid transparent;
    margin-bottom: -2px;
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
}

.tabs-nav-item:hover {
    color: var(--color-primary-600);
    background: var(--color-primary-50);
}

.tabs-nav-item.active {
    color: var(--color-primary-600);
    border-bottom-color: var(--color-primary-500);
    background: var(--color-primary-50);
}

.tabs-nav-item-icon {
    margin-right: var(--spacing-2);
}

.tabs-content {
    /* 内容区域 */
}

.tabs-pane {
    display: none;
}

.tabs-pane.active {
    display: block;
    animation: fadeIn var(--transition-base);
}

/* 竖版标签页 */
.tabs-vertical {
    flex-direction: row;
}

.tabs-vertical .tabs-nav {
    flex-direction: column;
    border-bottom: none;
    border-right: 2px solid var(--color-gray-200);
    margin-right: var(--spacing-6);
    margin-bottom: 0;
    min-width: 200px;
}

.tabs-vertical .tabs-nav-item {
    border-bottom: none;
    border-right: 2px solid transparent;
    margin-bottom: 0;
    margin-right: -2px;
}

.tabs-vertical .tabs-nav-item.active {
    border-right-color: var(--color-primary-500);
}

/* 卡片式标签页 */
.tabs-card .tabs-nav-item {
    border: 1px solid transparent;
    border-bottom: none;
    border-radius: var(--radius-base) var(--radius-base) 0 0;
    margin-bottom: -1px;
}

.tabs-card .tabs-nav-item.active {
    background: var(--color-white);
    border-color: var(--color-gray-200);
    border-bottom-color: var(--color-white);
}

/* ========================================
   下拉菜单 (Dropdown)
   ======================================== */

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-toggle {
    cursor: pointer;
}

.dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    z-index: var(--z-dropdown);
    min-width: 200px;
    margin-top: var(--spacing-2);
    padding: var(--spacing-2);
    background: var(--color-white);
    border-radius: var(--radius-base);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--transition-fast);
}

.dropdown-menu.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.dropdown-menu-right {
    left: auto;
    right: 0;
}

.dropdown-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-2) var(--spacing-3);
    color: var(--color-gray-700);
    text-decoration: none;
    font-size: var(--text-sm);
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
}

.dropdown-item:hover {
    background: var(--color-primary-50);
    color: var(--color-primary-600);
}

.dropdown-item-icon {
    font-size: var(--text-base);
}

.dropdown-divider {
    height: 1px;
    margin: var(--spacing-2) 0;
    background: var(--color-gray-200);
}

/* ========================================
   响应式设计
   ======================================== */

@media (max-width: 768px) {
    /* 顶部导航栏 */
    .navbar {
        flex-wrap: wrap;
        padding: var(--spacing-3) var(--spacing-4);
    }

    .navbar-toggle {
        display: flex;
    }

    .navbar-menu {
        display: none;
        width: 100%;
        flex-direction: column;
        gap: 0;
        margin-top: var(--spacing-3);
        padding-top: var(--spacing-3);
        border-top: 1px solid var(--color-gray-200);
    }

    .navbar-menu.show {
        display: flex;
    }

    .navbar-item {
        width: 100%;
        justify-content: flex-start;
    }

    .navbar-actions {
        order: -1;
        margin-left: auto;
    }

    .navbar-user-info {
        display: none;
    }

    /* 侧边栏 */
    .sidebar {
        transform: translateX(-100%);
    }

    .sidebar.show {
        transform: translateX(0);
    }

    /* 面包屑 */
    .breadcrumb {
        overflow-x: auto;
        flex-wrap: nowrap;
    }

    /* 标签页 */
    .tabs-nav {
        overflow-x: auto;
        flex-wrap: nowrap;
        -webkit-overflow-scrolling: touch;
    }

    .tabs-vertical {
        flex-direction: column;
    }

    .tabs-vertical .tabs-nav {
        flex-direction: row;
        border-right: none;
        border-bottom: 2px solid var(--color-gray-200);
        margin-right: 0;
        margin-bottom: var(--spacing-4);
        min-width: auto;
    }
}

/* 平板适配 */
@media (min-width: 769px) and (max-width: 1024px) {
    .navbar {
        padding: var(--spacing-3) var(--spacing-5);
    }

    .navbar-menu {
        gap: 0;
    }

    .sidebar {
        width: 220px;
    }
}
